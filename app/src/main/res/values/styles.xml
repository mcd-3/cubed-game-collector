<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/light_purple</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CubedTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/light_purple</item>
        <item name="android:navigationBarColor">@color/dark_purple</item>
        <item name="android:statusBarColor">@color/dark_purple</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:subtitleTextColor">@color/grey</item>
        <item name="android:icon">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/deep_red</item>
        <item name="android:colorBackground">@color/egg_white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CubedDarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/light_purple</item>
        <item name="android:navigationBarColor">@color/dark_grey</item>
        <item name="android:statusBarColor">@color/dark_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:subtitleTextColor">@color/smoke_grey</item>
        <item name="android:icon">@color/white</item>
        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorError">@color/bright_red</item>
        <item name="colorOnError">@color/red</item>
        <item name="android:colorBackground">@color/shadow</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="NightTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/silver</item>
        <item name="android:navigationBarColor">@color/dark_grey</item>
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:subtitleTextColor">@color/smoke_grey</item>
        <item name="android:icon">@color/white</item>
        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorError">@color/bright_red</item>
        <item name="colorOnError">@color/red</item>
        <item name="android:colorBackground">@color/shadow</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DolphinTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:statusBarColor">@color/deep_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:subtitleTextColor">@color/grey</item>
        <item name="android:icon">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/deep_red</item>
        <item name="android:colorBackground">@color/egg_white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="PlayerSelection" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:navigationBarColor">@color/dark_purple</item>
        <item name="android:statusBarColor">@color/dark_yellow</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:subtitleTextColor">@color/grey</item>
        <item name="android:icon">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/deep_red</item>
        <item name="android:colorBackground">@color/egg_white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="PlayerSelectionSilver" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/silver</item>
        <item name="colorPrimaryDark">@color/deep_grey</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:navigationBarColor">@color/dark_grey</item>
        <item name="android:statusBarColor">@color/dark_yellow</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:subtitleTextColor">@color/grey</item>
        <item name="android:icon">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/deep_red</item>
        <item name="android:colorBackground">@color/egg_white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Splash Screen Themes -->
    <style name="SplashCubed" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="android:statusBarColor">@color/dark_purple</item>
        <item name="android:navigationBarColor">@color/dark_purple</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


</resources>
